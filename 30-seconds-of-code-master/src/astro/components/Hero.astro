---
const { title, description, cover, coverSrcset, secondary } = Astro.props;

const Heading = secondary ? 'h2' : 'h1';
---

<section class='hero'>
  <div>
    <Heading>{title}</Heading>
    <Fragment set:html={description} />
  </div>
  {cover ?
    <img
      src={cover}
      srcset={coverSrcset}
      alt=''
      height='240'
      width='240'
      fetchpriority='high'
    /> : null}
</section>
